
<div class = 'form'>
<h1><%= @patient.id ? 'Edit Patient' : 'New Patient' %></h1>
<%= form_for @patient do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>
  
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :age %>
  <%= f.number_field :age %>

  <%= f.label :phone %>
  <%= f.text_field :phone %>

  <%= f.submit %>
<% end %>

</div>